
@{
    ViewBag.Title = "Admin_add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}
@model Mix_MTA2.Models.NguoiDung

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="h3 mb-2 text-gray-800">
                    Thêm mới
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-7" style="padding-bottom:120px">
                <form action="Admin_add" method="POST">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label>Họ và tên</label>
                        <input id="name" type="text" class="form-control" name="HoTen" placeholder="Nhập họ và tên" />
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        <input id="username" class="form-control" name="UserName" placeholder="Nhập tên người dùng"/>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input id="pass" type="password" class="form-control" name="Password" placeholder="Nhập mật khẩu"/>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Nhập lại mật khẩu</label>
                        <input id="repass" type="password" class="form-control" name="RePassword" placeholder="Nhập lại mật khẩu" onkeyup="Kiemtra()" />
                        <label id="mess"><span style="color:red">Mật khẩu chưa khớp</span></label>
                    </div>

                    <div class="form-group">
                        <label>Cấp độ:</label>
                        <br />
                        <label class="radio-inline">
                            <input name="CapDo" value="Admin" type="radio"> Quản trị viên
                        </label>
                        <label class="radio-inline">
                            <input name="CapDo" value="Editor" checked="" type="radio" style="margin-left:30px"> Biên tập viên
                        </label>
                    </div>
                    <button id="save" disabled="disabled" type="submit" class="btn btn-default" style="background-color:#4e73df; color: rgba(255,255,255,.8)">Thêm</button>
                    <a href="Admin_list"  class="btn btn-default" style="background-color:darkred; color: rgba(255,255,255,.8)">Hủy</a>
                </form>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
<script>    
    function Kiemtra() {
        var fpw = document.getElementById("pass").value;
        var spw = document.getElementById("repass").value;
        if (fpw != spw) {
            document.getElementById("mess").innerHTML = "<span style='color:red'>Mật khẩu chưa khớp</span>";
            document.getElementById("save").disabled = true;
        }
            
        else {
            document.getElementById("mess").innerHTML = "";
            document.getElementById("save").disabled = false;
        }
           
    }
</script>

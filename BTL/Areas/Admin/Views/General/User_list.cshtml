
@{
    ViewBag.Title = "User_list";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="h3 mb-2 text-gray-800">
                    Danh sách người dùng
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr align="center">
                        <th>ID</th>
                        <th>Họ tên</th>
                        <th>Giới tính</th>
                        <th>Email</th>
                        <th>Ngày đăng ký</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Mix_MTA2.Models.ThanhVien it in ViewBag.DS)
                    {
                        <tr class="odd gradeX" align="center" id="row_@it.ID_user">
                            <td>@it.ID_user</td>
                            <td>@it.HoTen</td>
                            <th>@it.GioiTinh</th>
                            <td>@it.Email</td>
                            <td>@it.NgayDangky</td>
                            <td>
                                <a data-ajax="true" data-ajax-complete="$('#row_'+@it.ID_user+'').remove()" data-ajax-confirm="Bạn có chắc muốn xóa" data-ajax-method="Delete" href="/Admin/General/Delete_member/@it.ID_user" style="color:#fff"><img src="~/Content/Admin/img/delete.png" /></a>
                            </td>
                        </tr>
                       
                    }
                </tbody>
            </table>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
